general {
  color_good = "#ffffff"
  color_bad  = "#ff1616"
}

order += "volume master"
order += "wireless wlp2s0"
order += "path_exists VPN"
order += "tztime local"

volume master {
  format = "Volume: %volume"
  format_muted = "Volume: Mute"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

wireless wlp2s0 {
  format_up = "WiFi: %quality at %essid as %ip"
  format_down = "WiFi"
}

path_exists VPN {
  path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
  format = "Now: %Y-%m-%d %H:%M"
}
